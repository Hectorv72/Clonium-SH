<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sala</title>
</head>
<body>
    <div>
        <input type="text" id="room" placeholder="room" >
        <button id="unirse">Unirse</button>
        <br>
        <button id="crear">Crear</button>

    </div>
</body>
<script>
    const inpRoom   = document.getElementById('room');
    const btnUnirse = document.getElementById('unirse');
    const btnCrear  = document.getElementById('crear');

    function makeid(length) {
        var result           = '';
        var characters       = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
        var charactersLength = characters.length;
        for ( var i = 0; i < length; i++ ) {
            result += characters.charAt(Math.floor(Math.random() * charactersLength));
        }
        return result;
    }

    console.log(makeid(30));
    console.log(location);

    btnUnirse.addEventListener("click",() => {
        if(inpRoom.value.length === 30){
            location.href = `${location.pathname}/${inpRoom.value}`;
        }
    });

    btnCrear.addEventListener("click",() => {
        const room = makeid(30); 
        location.href = `${location.pathname}/${room}`;
    })
</script>
</html>